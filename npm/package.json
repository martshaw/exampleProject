{
  "name": "Mart",
  "version": "1.0.0",
  "description": "Facebook connect example",
  "main": "app.js",
  "devDependencies": {
    "argv": "0.0.2",
    "babel": "^5.0.9",
    "bootstrap-npm": "^4.1.0",
    "browserify": "^9.0.7",
    "connect-livereload": "^0.5.3",
    "copy-cli": "^1.2.1",
    "cpx": "^1.2.1",
    "csso": "^1.3.11",
    "eslint": "^1.6.0",
    "filewatch": "0.0.1",
    "fwatch": "^1.0.1",
    "http-server": "^0.8.0",
    "jshint": "^2.6.3",
    "node-css": "0.0.2",
    "node-fwatch": "^0.1.1",
    "node-sass": "^3.3.3",
    "nodemon": "^1.3.7",
    "opener": "^1.4.0",
    "parallelshell": "^1.1.1",
    "stylus": "^0.50.0",
    "uglify": "^0.1.1",
    "uglify-js": "^2.4.19",
    "watch": "^0.16.0",
    "watchify": "^3.4.0"
  },
  "repository": {
    "type": "git",
    "url": "martshaw"
  },
  "scripts": {
    "build:js": "browserify app/js/app.js --debug > dist/js/scripts.min.js",
    "build:css": "node-sass --include-path css app/sass/styles.scss app/css/styles.min.css",
    "minify:css": "csso app/css/styles.min.css dist/css/styles.min.css",
    "build": "npm run build:js -s && npm run build:css -s && npm run minify:css",
    "clean": "rm -r ./dist/",
    "mkdir": "mkdir ./dist && mkdir ./dist/js && mkdir ./dist/css",
    "jshint": "jshint app/js/*.js && jscs app/js/*.js",
    "sass:lint": "scss-lint app/sass/**/*.css.scss",
    "lint:js": "watch 'eslint app/js/app.js' app/js/",
    "watch:js": "cpx 'app/**/*.{html,jpg}' dist -w & watchify app/js/app.js -d -o dist/js/scripts.min.js -v",
    "watch:sass": "watch 'npm run build:css' app/sass/",
    "watch:build": "parallelshell \"npm run watch:sass -s\" \"npm run watch:js -s\" \"npm run lint:js -s\"",
    "watch": "npm run watch:build -s",
    "open:dev": "opener http://localhost:9090/",
    "serve": "http-server app/ -p 9090",
    "live-reload": "live-reload dist/ --port 9091",
    "dev": "npm run open:dev -s && parallelshell \"npm run live-reload -s\" \"npm run watch -s\" \"npm run serve -s\" ",
    "start": "npm run clean && npm run mkdir  &&  npm run dev -s",
    "prod": "./bin/build.sh"
  },
  "keywords": [
    "Example project setup"
  ],
  "author": "martin shaw",
  "license": "ISC"
}
